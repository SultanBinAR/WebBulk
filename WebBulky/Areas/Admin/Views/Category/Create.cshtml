@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Create Category
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <!--To get all the validation errors in one place. "All" checks for all validations | "ModelOnly" for Custom Validations-Not properties like Name & D. O. | "None" for none.  -->
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12 mb-3">
                    <label asp-for="Name" class="ms-2 pt-2"></label>
                    <input asp-for="Name" class="form-control shadow border-0" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 mb-3">
                    <label asp-for="DisplayOrder" class="ms-2 pt-2"></label>
                    <input asp-for="DisplayOrder" class="form-control shadow border-0" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-secondary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/> //Partial will always look for Shared folder inside views to get partial.
    //These are unaware of the Custom validations.
    }
}