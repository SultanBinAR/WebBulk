@model ProductVM

<div class="card shadow border-0">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.Product.Id != 0 ? "Update" : "Create") Product
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden/>
            <input asp-for="Product.ImageUrl" hidden/>
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <!--To get all the validation errors in one place. "All" checks for all validations | "ModelOnly" for Custom Validations-Not properties like Title & D. O. | "None" for none.  -->
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-floating py-2 col-12 mb-3">
                            <label asp-for="Product.Title" class="ms-2 pt-2"></label>
                            <input asp-for="Product.Title" class="form-control shadow border-0" />
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12 mb-3">
                            <label asp-for="Product.Description" class="ms-2 pt-2 mb-2"></label>
                            <textarea asp-for="Product.Description" class="form-control shadow border-0"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12 mb-3">
                            <label asp-for="Product.ISBN" class="ms-2 pt-2"></label>
                            <input asp-for="Product.ISBN" class="form-control shadow border-0" />
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12 mb-3">
                            <label asp-for="Product.Author" class="ms-2 pt-2"></label>
                            <input asp-for="Product.Author" class="form-control shadow border-0" />
                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12 mb-3">
                            <label asp-for="Product.ListPrice" class="ms-2 pt-2"></label>
                            <input asp-for="Product.ListPrice" class="form-control shadow border-0" />
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12 mb-3">
                            <label asp-for="Product.Price" class="ms-2 pt-2"></label>
                            <input asp-for="Product.Price" class="form-control shadow border-0" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12 mb-3">
                            <label asp-for="Product.Price50" class="ms-2 pt-2"></label>
                            <input asp-for="Product.Price50" class="form-control shadow border-0" />
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12 mb-3">
                            <label asp-for="Product.Price100" class="ms-2 pt-2"></label>
                            <input asp-for="Product.Price100" class="form-control shadow border-0" />
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12 mb-3">
                            <label asp-for="Product.CategoryId" class="ms-2 pt-2"></label>
                            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select shadow border-0 mt-2">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12 mb-3">
                            <label asp-for="Product.ImageUrl" class="ms-2 pt-2 mb-2"></label>
                            <input type="file" name="file" class="form-control shadow border-0" />
                        </div>
                        <div class="row mb-3">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-secondary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-secondary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Product.ImageUrl" style="width:100%; border-radius:5px; border:1px solid #bbb9b9;" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <script>
            tinymce.init({
                selector: 'textarea',
                plugins: 'ai tinycomments mentions anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed permanentpen footnotes advtemplate advtable advcode editimage tableofcontents mergetags powerpaste tinymcespellchecker autocorrect a11ychecker typography inlinecss',
                toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | align lineheight | tinycomments | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
                mergetags_list: [
                    { value: 'First.Name', title: 'First Name' },
                    { value: 'Email', title: 'Email' },
                ],
                ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
            });
        </script>
    <partial name="_ValidationScriptsPartial"/> //Partial will always look for Shared folder inside views to get partial.
    //These are unaware of the Custom validations.
    }
}